<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppLayoutsJosueMullo.StackLayoutPage"
             Title="StackLayoutPage">
    <ScrollView>
        <VerticalStackLayout Spacing="19">
            <Label
              Text="Josue"
              FontSize="32"
              TextColor="GreenYellow"
              HorizontalOptions="Center"/>
            <Label 
              Text="Mullo"
              FontSize="24"
              TextColor="Blue"
              HorizontalOptions="Center" />
            <Label 
              Text="Vega"
              FontSize="18"
              TextColor="Red"
              HorizontalOptions="Center" />
            <Button 
              x:Name="btnIrAFlex"
              Text="Ir a FlexLayout"
              Clicked= "btnIrAFlex_Clicked"
              HorizontalOptions="Center"
              VerticalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>